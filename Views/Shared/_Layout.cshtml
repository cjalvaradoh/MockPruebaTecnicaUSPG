<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MockPruebaTecnica</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- ApexCharts CSS (para gráficos) -->
    <link href="https://cdn.jsdelivr.net/npm/apexcharts@3.34.0/dist/apexcharts.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MockPruebaTecnica.styles.css" asp-append-version="true" />

    <style>
        /* Estilo para el menú vertical */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #f8f9fa;
            padding-top: 20px;
            border-right: 2px solid #ddd;
        }

            .sidebar .nav-link {
                padding: 10px 15px;
                font-size: 18px;
            }

                .sidebar .nav-link:hover {
                    background-color: #ddd;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Barra lateral izquierda -->
        <div class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Menu</span>
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                </li>           
            </ul>
        </div>

        <!-- Contenido principal -->
        <div class="content">
            <header class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MockPruebaTecnica</a>
                </div>
            </header>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- JavaScript necesario para Bootstrap y ApexCharts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ApexCharts JS (para gráficos interactivos) -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.34.0"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
